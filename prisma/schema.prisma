generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  route     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id          Int      @id @default(autoincrement())
  senderName  String
  senderEmail String
  senderMessage String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
